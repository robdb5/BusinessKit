package com.flashsupport.video {		import flash.display.Sprite;	import flash.display.DisplayObjectContainer;	import flash.display.DisplayObject;		public class BackgroundBox extends Sprite {				public function BackgroundBox(obj:DisplayObjectContainer, color:uint) {			super();			drawBg(obj, color);				}					private function drawBg(obj:DisplayObjectContainer, color:uint):void {			var target:DisplayObjectContainer = obj.parent;			if(target == null) target = obj;			graphics.lineStyle(1, 0x000000, 0);			graphics.beginFill(color, 1);			graphics.drawRect(0, 0, obj.width, obj.height);			graphics.endFill();						target.addChild(this);						if(target != obj){				x = obj.x;				y = obj.y;				target.swapChildren(this, obj);			} else {				for(var i:Number = target.numChildren - 1; i >= 0; i--){					var boxIndex:Number = target.getChildIndex(this);					if(i != boxIndex)	target.swapChildrenAt(boxIndex, i);				}			}					}			}	}